{
    "name": "wangchengtao/tianque",
    "description": "天阙开放平台 SDK",
    "keywords": [
        "tianque", "sdk"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "wangchengtao",
            "email": "915129420@qq.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-openssl": "*",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Summer\\TianQue\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Summer\\TianQue\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "git config core.hooksPath .githooks || true",
            "chmod +x .githooks/pre-commit || true"
        ],
        "cs": "php-cs-fixer fix $1"
    }
}
